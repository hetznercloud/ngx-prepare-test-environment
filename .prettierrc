{
  "printWidth": 80,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "strict",
  "overrides": [
    {
      "files": [
        "*.md",
        "*.json",
        "*.yml",
        ".prettierrc",
        ".babelrc",
        ".gitlab-ci.yml",
        ".codeclimate.yml",
        ".sass-lint.yml"
      ],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "index.html",
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": "*.yaml.template",
      "options": {
        "parser": "yaml",
        "tabWidth": 2
      }
    },
    {
      "files": "*.md.template",
      "options": {
        "parser": "markdown",
        "tabWidth": 2
      }
    }
  ]
}
